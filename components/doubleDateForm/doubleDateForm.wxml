<!--components/doubleDateForm/doubleDateForm.wxml-->
<view class="container">
  <movable-area class="m-area">
    <movable-view id="{{index}}" class="m-view" direction="horizontal" x="{{isOpen?'-146rpx':'0'}}"
      bindtouchstart="_tStart" bindtouchend="_tEnd">
    
      <view class="row" style="margin-bottom:0">
        <view class="left">
          <view style="color:red;width:4rpx;">*</view>
          <view><text space="ensp"> 开始时间</text></view>
        </view>
        <view class="right">
          <picker mode="date" value="{{beginDate_?beginDate_:beginDate}}" start="1995-09-01" end="{{curDate}}"
            bindchange="bindBeginDateChange">
            <view class="picker">
              {{beginDate_?beginDate_:beginDate}}
            </view>
          </picker>
        </view>
      </view>
      <view class="row" style="margin-bottom:0">
        <view class="left">
          <view style="color:red;width:4rpx;">*</view>
          <view><text space="ensp"> 结束时间</text></view>
        </view>
        <view class="right">
          <picker mode="date" value="{{endDate_?endDate_:endDate}}" start="1995-09-01" end="{{curDate}}"
            bindchange="bindEndDateChange">
            <view class="picker">
              {{endDate_?endDate_:endDate}}
            </view>
          </picker>
        </view>
      </view>
      <view class="row" >
        <view class="left">
          <view style="color:red;width:4rpx;">*</view>
          <view><text space="ensp"> {{name}}</text></view>
        </view>
        <view class="right">
          <input placeholder="{{placeholder}}" bindinput="input_" value="{{nameValue}}"/>
        </view>
      </view>
    </movable-view>
  </movable-area>
  <button type="warn" size="mini" class="btn" bindtap="delete">
    删除
  </button>
</view>
