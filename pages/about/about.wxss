/* pages/about/about.wxss */
.page{
  display: flex;
  height: 100vh;
  flex-direction: column;
  /* margin: 0rpx 10rpx; */
}
.page .header{
  /* background-color: yellowgreen; */
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom:2rpx solid black;
  /* position: fixed;
  width: 100%; */
  background-color: whitesmoke;
  /* background-color: black; */
}
.page .header .avatar{
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border-top: 2rpx solid #999;
  border-bottom: 4rpx solid #999;
  border-left: 4rpx solid #999;
  border-right: 2rpx solid #999;
}
.page ._body{
  flex:1;
  display:flex; 
  flex-direction: column;
  margin: 0 30rpx;
  /* background-color: yellow; */

}
.page ._body .title{
  padding:20rpx 0;
  /* margin: 0 30rpx; */
  border-bottom: 2rpx solid #999;
  /* background-color: whitesmoke; */
}
.page ._body .title text{
  color:#999;
  /* font-weight: bold; */
  font-size: 26rpx;
}
.page ._body .content{
  display: flex;
  flex-direction: column;
  /* padding-top: 20rpx;
  padding-bottom: 20rpx; */
}
.page ._body .content text{
  font-size: 20rpx;
  line-height: 50rpx;
  color:#666;
}

.page .footer{
  /* background-color: yellow; */
  display: flex;
  flex-direction: column;
  /* position: fixed; */
  text-align: center;
  border-top: 2rpx solid black;
  padding: 10rpx 0;
  /* width: 100%;
  bottom: 0;
  z-index: 999; */
  background-color: whitesmoke;
  /* background-color: black; */
}
.page .footer .sentence{
  color: #999;
  font-size: 24rpx;
}
.page .footer .date{
  color: #bfbfbf;
  font-size: 20rpx;
}