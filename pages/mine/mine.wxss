.page{
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom:4rpx solid black;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border-top: 2rpx solid #999;
  border-bottom: 4rpx solid #999;
  border-left: 4rpx solid #999;
  border-right: 2rpx solid #999;
}

.userinfo-nickname {
  color: #aaa;
}

.functionsBody{
  flex:1;
  /* background-color: whitesmoke; */
}
.functionsBody .title{
  padding:20rpx 0;
  /* background-color: tomato; */
  margin: 0 30rpx;
  border-bottom: 2rpx solid #999;
  /* background-color: whitesmoke; */
}
.functionsBody .title text{
  color:#999;
  font-weight: bold;
}
.functionsBody .functions{
  display: flex;
  /* width: 100%; */
